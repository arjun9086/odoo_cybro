<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="payment_provider_form_razorpay" model="ir.ui.view">
        <field name="name">payment.provider.form.razorpay</field>
        <field name="model">payment.provider</field>
        <field name="inherit_id" ref="payment.payment_provider_form"/>
        <field name="arch" type="xml">
            <group name="provider_credentials" position="inside">
                <group name="razorpay_credentials" invisible="code != 'new_razorpay'">
                    <field name="razorpay_key_id" required="1"/>
                    <field name="razorpay_key_secret" required="1" password="True"/>
                    <field name="razorpay_webhook_secret" password="True"/>
                </group>
            </group>
        </field>
    </record>
</odoo>
