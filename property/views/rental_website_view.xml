<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="property_rental_template" name="Rental website">
        <t t-call="website.layout">
            <div class="container">
                <h2>Rental Records</h2>
                <a href="/rental/new" class="btn btn-primary mb-3">Create New</a>
                <div class="row">
                    <t t-foreach="rentals" t-as="rental">
                        <div class="col-md-4 mb-4">
                            <div class="card">
                                <div class="card-body">
                                    <h5 class="card-title">
                                        <t t-esc="rental.name"/>
                                    </h5>
                                    <p>
                                        <strong>Tenant:</strong>
                                        <t t-esc="rental.tenant_id.name"/>
                                    </p>
                                    <p>
                                        <strong>Start:</strong>
                                        <t t-esc="rental.start_date"/>
                                    </p>
                                    <p>
                                        <strong>End:</strong>
                                        <t t-esc="rental.end_date"/>
                                    </p>
                                    <p>
                                        <strong>Status:</strong>
                                        <t t-esc="rental.status"/>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </t>
                </div>
            </div>
            <a t-attf-href="/web#id=#{rental.id}&amp;model=property.rental&amp;view_type=form" target="_blank"/>
        </t>
    </template>
