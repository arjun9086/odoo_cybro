<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <!--    Properties -->
    <record id="property_action" model="ir.actions.act_window">
        <field name="name">Properties</field>
        <field name="res_model">property.main</field>
        <field name="view_mode">list,form,kanban</field>
    </record>
    <!--    Form view -->
    <record id="property_form_view" model="ir.ui.view">
        <field name="name">property.form.view</field>
        <field name="model">property.main</field>
        <field name="arch" type="xml">
            <form string="name">
                <header>
                    <field name="status" widget="statusbar" options="{'clickable': True}"/>
                </header>
                <sheet>
                    <field name="image" widget="image" class="oe_right oe_avatar"/>
                    <div class='oe_title'>
                        <h1>
                            <field name='name'/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="can_be_sold"/>
                            <label for="name" string="Address"/>
                            <div class="o_address_format">
                                <field name="street1" placeholder="Street..."/>
                                <field name="street2" placeholder="Street 2..."/>
                                <field name="state" placeholder="State..."/>
                                <field name="country" placeholder="country..."/>
                            </div>
                            <field name="rent"/>
                        </group>
                        <group>
                            <field name="built_date"/>
                            <field name="owner"/>
                            <field name="legal_amount"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <field name="description"/>
                        </page>
                    </notebook>
                </sheet>
                <group>
                    <chatter>
                    </chatter>
                </group>
            </form>
        </field>
    </record>

    <!--List view-->
    <record id="property_view_list" model="ir.ui.view">
        <field name="name">property.view.list</field>
        <field name="model">property.main</field>
        <field name="arch" type="xml">
            <list>
                <field name='name'/>
                <field name='owner'/>
                <field name='built_date'/>
                <field name="can_be_sold"/>
                <field name='state'/>
                <field name='country'/>
                <field name="status"/>
            </list>
        </field>
    </record>

</odoo>