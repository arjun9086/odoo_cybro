<odoo>
    <record id="faculty_action" model="ir.actions.act_window">
        <field name="name">Teachers</field>
        <field name="res_model">school.faculty</field>
        <field name="view_mode">list,kanban,form</field>
    </record>

    <!--Form view-->
    <record id="faculty_form_view" model="ir.ui.view">
       <field name="name">faculty.form.view</field>
       <field name="model">school.faculty</field>
       <field name="arch" type="xml">
            <form string="name">
                <sheet>
                    <div class='oe_title'>
                        <h1><field name='name'/></h1>
                    </div>
                </sheet>
            </form>
       </field>
    </record>


<!--  office staffs-->
    <record id="office_staff_action" model="ir.actions.act_window">
        <field name="name">Office Staffs</field>
        <field name="res_model">school.faculty</field>
        <field name="view_mode">list,kanban,form</field>
    </record>




<!--    support staffs-->
    <record id="support_staff_action" model="ir.actions.act_window">
        <field name="name">Support Staffs</field>
        <field name="res_model">school.faculty</field>
        <field name="view_mode">list,kanban,form</field>
    </record>

</odoo>