<?xml version="1.0" encoding="UTF-8" ?>
<templates id="template" xml:space="preserve">
    <t t-name="pos_clear_all.ControlButtons" t-inherit="point_of_sale.ControlButtons" t-inherit-mode="extension">
        <xpath expr="//OrderlineNoteButton" position="after">
            <button class="button mobile-more-button btn btn-light btn-lg flex-fill"
                    t-on-click="() => this.onClickClearAll()">
                <i class="fa fa-eraser me-1" role="img" aria-label="Custom Clear All" title="Custom Clear All"/>Clear
                All
            </button>
        </xpath>
    </t>
</templates>
