<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="res_config_settings_inherit_view" model="ir.ui.view">
        <field name="name">res.config.settings.inherit.view</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="point_of_sale.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//block[@id='pos_accounting_section']" position="inside">
                <setting>
                    <field name="is_discount_limit"/>
                    <div class="content-group" invisible="not is_discount_limit">
                        <div class="row mt16">
                            <label class="o_light_label col-lg-3" string="Set the discount limit"
                                   for="discount"/>
                            <field name="discount"/>
                        </div>
                        <br/>
                        <div class="row">
                            <label class="o_light_label col-lg-3" string="Set the category"
                                   for="discount"/>
                            <field name="pos_category_ids" widget="many2many_tags" string="Pos category"/>
                        </div>
                    </div>
                </setting>
            </xpath>
        </field>
    </record>
</odoo>
